# systemd configuration to run a single instance of weewx as a daemon

[Unit]
Description=weewx weather system
Requires=time-sync.target, network-online.target
After=network-online.target
RequiresMountsFor=/

[Service]
ExecStart=/usr/share/weewx/weewxd --daemon --pidfile=/var/run/weewx.pid /etc/weewx/weewx.conf
ExecReload=/bin/kill -HUP $MAINPID
Type=simple
PIDFile=/var/run/weewx.pid
Restart=on-failure
#User=weewx
#Group=weewx

[Install]
WantedBy=multi-user.target

